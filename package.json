{
  "name": "@tfwdev/spaced",
  "version": "1.0.0",
  "description": "Space editor for the tfw multiplayer game platform",
  "author": "tfw, inc. (https://tfw.dev)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tfwdev/spaced.git"
  },
  "sideEffects": false,
  "scripts": {
    "build": "tsc -b",
    "linktfw": "yarn link --cwd ../platform/lib ; yarn link @tfwdev/platform",
    "server": "NODE_PATH=./node_modules node lib/server.js",
    "start": "webpack-dev-server --config webpack.dev.js",
    "webpack": "webpack --config webpack.prod.js",
    "electron": "electron main.local.js",
    "dist": "electron-builder -w",
    "prepare": "electron-builder install-app-deps"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  },
  "main": "main.dev.js",
  "build": {
    "appId": "dev.tfw.spaced",
    "productName": "Spaced",
    "directories": {
      "output": "lib"
    },
    "npmRebuild": false
  },
  "_moduleAliases": {
    "tfw": "node_modules/@tfwdev/platform"
  },
  "dependencies": {
    "@tfwdev/platform": "^0.2.0-snapshot",
    "module-alias": "^2.2.2"
  },
  "devDependencies": {
    "awesome-typescript-loader": "^5.2.0",
    "electron": "^7.0.1",
    "electron-builder": "^22.1.0",
    "lodash": "^4.17.13",
    "ts-jest": "^24.0.0",
    "typescript": "^3.5.1",
    "webpack": "^4.34.0",
    "webpack-cli": "^3.3.4",
    "webpack-dev-server": "^3.7.2",
    "webpack-merge": "^4.2.1"
  }
}
